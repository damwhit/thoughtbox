<h1>Sign up</h1>
<div class="row">
  <div class="container">
    <%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "signup", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
