<h1>Links</h1>
<div class="row">
  <div class="container">
    <%= form_for(@link) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.submit "save", class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="container">
    <table class="col-md-6">
      <tbody>
        <% if @links %>
        <% @links.each do |link| %>
        <tr>
          <td>
            <%= link.name %>
          </td>
          <td>
            <%= link.url %>
          </td>
          <td>
            <%= link.read %>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
